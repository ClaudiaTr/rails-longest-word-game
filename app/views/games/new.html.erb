<div class="header">
  <h2>New game</h2>
  <p id="btn-home"><%= link_to "Home", root_path %></p>
</div>
<div class="box-content">
  <div id="grid"><%= @letters.join(" ") %></div>
  <p>What is the longest word you can find?</p>
  <div id="form">
    <form action="/score">
      <input type="text" name="attempt" placeholder="Type your word here">
      <input class="btn-dark" type="submit" value="Play">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag "grid", @letters %>
    </form>
  </div>
</div>
